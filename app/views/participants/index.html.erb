<h1 class="text-white".text-white>View <%= pluralize(@participants.count, "Participants") %></h1>
<table class="table table-striped table-dark table-bordered">
	<thead>
		<tr>
			<th scope="col">First Name</th>
			<th scope="col">Last Name</th>
			<th scope="col">Email Address</th>
			<th scope="col">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @participants.each do |participant| %>
		<tr>
			<td><%= participant.first_name %></td>
			<td><%= participant.last_name %></td>
			<td><%= participant.email_address %></td>
			<td>
				<a class="btn btn-info" href="/participants/<%= participant.id %>">Meetings</a>|
				<a class="btn btn-warning" href="/participants/<%= participant.id %>/edit">Edit</a> |
				<a class="btn btn-danger" href="/participants/<%= participant.id %>" data-method="delete"
					data-confirm="Are you sure?">Delete</a>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<a class="btn btn-primary" href="/participants/new">Create Participants</a>